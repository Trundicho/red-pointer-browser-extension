{
  "manifest_version": 3,
  "name": "Red Pointer Extension",
  "description": "Changes the cursor to a red pointer",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "change-cursor.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "commands": {
    "toggle_cursor": {
      "suggested_key": {
        "default": "Alt+Y"
      },
      "description": "Toggle the cursor"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "cursors/Big-Red-Circle.cur",
      ],
      "matches": ["https://*/*"],
      "use_dynamic_url": true
    }
  ]
}
